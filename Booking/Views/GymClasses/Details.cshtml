</div>



<div><b>Lista på bokade deltagare</b></div>

        <ul>
    @if (Model.Attendants!=null && Model.Attendants.Count() > 0)
    {
        
        @foreach(var attendant in Model.Attendants)
        {
            <li>@attendant?.ApplicationUser?.Email</li>
        }
    }
    else{
            <li>Ingen bokad ännu</li>
    }
            
        </ul>



<div>
    <a asp-action="Edit" asp-route-id="@Model.GymClassId">Edit</a> |
